<Window x:Class="Splashpaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Splashpaper.ViewModels"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Splashpaper"
        Width="500"
        SizeToContent="Height"
        d:DataContext="{d:DesignInstance viewModels:MainViewModel}">
    <StackPanel Margin="8">
        <TextBlock Text="Topics:" Margin="4" />
        <TextBox Padding="4,2" Text="{Binding Topics}" Margin="4,4,4,16" TextWrapping="Wrap" />
        <TextBlock Margin="4">
            <Run Text="Light/Dark threshold:" />
            <Run Text="{Binding ThemeThreshold, Mode=OneWay, StringFormat=P0}" />
        </TextBlock>
        <Slider Padding="4,2" Minimum="0.10" Maximum="0.90" Value="{Binding ThemeThreshold}" TickFrequency="0.05" />
        <TextBlock Text="{Binding CurrentWallpaper.Title}" FontSize="14" TextWrapping="Wrap" Margin="4" />
        <TextBlock Text="{Binding CurrentWallpaper.Location}" FontSize="12" TextWrapping="Wrap" Margin="4,4,4,16" />
        <Button Content="Update wallpaper" Command="{Binding Update}" Margin="4"
                Padding="8,4"
                HorizontalAlignment="Center" />
    </StackPanel>
</Window>